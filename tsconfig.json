{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2018",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "checkJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, // necessary for nestjs dependency injection
    "strictPropertyInitialization": false, // TODO: fix generation of examples/schema-first/src/graphql.schema.ts
    "paths": {
      "@graphql-yoga/nestjs": ["./src/index.ts"],
      "@graphql-yoga/nestjs/lib/federation": ["./src/federation.ts"]
    }
  },
  "include": [".eslintrc.cjs", "vitest.config.ts", "src", "tests", "scripts", "examples/**/*"]
}
