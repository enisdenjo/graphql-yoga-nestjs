{
  "compilerOptions": {
    "target": "es2022",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "removeComments": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": ["src", "tests"],
  "exclude": ["dist"]
}
