{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2018",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "checkJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true // necessary for nestjs dependency injection
  },
  "include": [".eslintrc.cjs", "vitest.config.ts", "src", "tests", "scripts"]
}
